CC = gcc
COMPILER = $(CC)
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
NAME = school
RM = /bin/rm -f
RMOBJ = $(RM) $(OBJ)
RMNAME = $(RM) $(NAME)
CFLAGS = -Wall -Werror -Wextra -pedantic
FLAGS = $(CLAGS)

all:$(NAME)
$(NAME):$(OBJ)
	$(COMPILER) $(OBJ) -O $(NAME)
%.o:%.c m.h
	$(COMPILER) $(FLAGS) -c $< -o $@

clean:
	$(RMOBJ) $(wildcars *~) $(NAME)

oclean:
	$(RMOBJ)

fclean: clean
	$(RMNAME)

re: fclean all

.PHONY: all clean oclean fclean re
